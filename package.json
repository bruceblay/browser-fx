{
  "name": "browser-fx",
  "displayName": "Browser FX",
  "version": "0.0.3",
  "description": "Chrome extension that applies real-time audio effects to browser tabs",
  "author": "Bruce Blay <bruceblay@gmail.com>",
  "contributors": [
    {
      "name": "bruceblay"
    }
  ],
  "scripts": {
    "dev": "plasmo dev",
    "dev:setup": "npm run dev && npm run copy-offscreen:dev",
    "build": "plasmo build && npm run copy-offscreen:prod",
    "package": "plasmo package",
    "copy-offscreen:dev": "node scripts/copy-offscreen-dev.js",
    "copy-offscreen:prod": "node scripts/copy-offscreen-prod.js"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabCapture",
      "offscreen",
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "offscreen.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bruceblay/tab-bitcrusher.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bruceblay/tab-bitcrusher/issues"
  },
  "homepage": "https://github.com/bruceblay/tab-bitcrusher#readme"
}
